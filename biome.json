{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"all": true
			},
			"style": {
				"all": true
			}
		},
		"ignore": ["node_modules", "demo"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"indentStyle": "space"
		}
	},
	"formatter": {
		"ignore": ["node_modules", "demo", "package.json"],
		"lineWidth": 140
	}
}
